[Unit]
Description=Backup Camera Script
DefaultDependencies=no
After=local-fs.target
Requires=local-fs.target
#systemd-fsckd.socket
ConditionPathIsDirectory=/media/usb/lost+found

[Service]
ExecStart=/bin/bash -c "sudo screen -d -m /root/carCam.py"
StandardInput=tty
StandardOutput=tty

[Install]
WantedBy=multi-user.target
